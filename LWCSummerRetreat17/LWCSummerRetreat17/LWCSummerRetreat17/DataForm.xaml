        <Label x:Name="firstNameStatic" Content="First Name:" HorizontalAlignment="Left" Margin="80,103,0,0" VerticalAlignment="Top" FontFamily="SimSun-ExtB"/>
        <Label x:Name="lastNameStatic" Content="Last Name:" HorizontalAlignment="Left" Margin="80,134,0,0" VerticalAlignment="Top" FontFamily="SimSun-ExtB"/>
        <Label x:Name="balanceStatic" Content="Balance:" HorizontalAlignment="Left" Margin="80,165,0,0" VerticalAlignment="Top" FontFamily="SimSun-ExtB"/>
        <Label x:Name="firstNameDynamic" Content="-" HorizontalAlignment="Left" Margin="155,103,0,0" VerticalAlignment="Top" FontFamily="SimSun-ExtB"/>
        <Label x:Name="lastNameDynamic" Content="-" HorizontalAlignment="Left" Margin="155,134,0,0" VerticalAlignment="Top" FontFamily="SimSun-ExtB"/>
        <Label x:Name="balanceDynamic" Content="-" HorizontalAlignment="Left" Margin="139,165,0,0" VerticalAlignment="Top" FontFamily="SimSun-ExtB"/>
        <Label x:Name="idError" Content="" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top" Width="256" Foreground="Red" Height="33" FontFamily="SimSun-ExtB"/>

    </Grid>
</Window>
